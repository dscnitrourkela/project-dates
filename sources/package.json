{
	"name": "elaichi",
	"version": "1.0.0",
	"description": "Backend Repository | Avenue for NITR",
	"main": "index.js",
	"scripts": {
		"doc": "jsdoc -c  jsdoc.json -r",
		"prettier": "npx prettier --write .",
		"prettier:check": "npx prettier --check .",
		"eslint": "npx eslint",
		"eslint:fix": "npx eslint --fix",
		"start": "npx pm2 start ecosystem.config.js --env development",
		"stop": "npx pm2 stop ecosystem.config.js --env development",
		"delete": "npx pm2 delete ecosystem.config.js --env development",
		"restart": "npx pm2 restart ecosystem.config.js --env development",
		"start:prod": "pm2-runtime start index.js -i max --env production ",
		"test": "cross-env NODE_ENV=test jest --runInBand --coverage",
		"test:watch": "cross-env NODE_ENV=test --runInBand --watch"
	},
	"author": "dscnitrourkela",
	"license": "ISC",
	"dependencies": {
		"apollo-datasource": "^0.7.2",
		"apollo-server": "^2.19.1",
		"dotenv": "^8.2.0",
		"firebase-admin": "^9.4.2",
		"graphql": "^15.4.0",
		"graphql-iso-date": "^3.6.1",
		"mongoose": "^5.11.10"
	},
	"devDependencies": {
		"apollo-server-testing": "^2.19.2",
		"cross-env": "^7.0.3",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^6.15.0",
		"jest": "^26.6.3",
		"jest-cli": "^26.6.3",
		"jest-environment-node": "^26.6.2",
		"jsdoc": "^3.6.6",
		"mongodb-memory-server": "^6.9.3",
		"pm2": "^4.5.4",
		"prettier": "2.2.0"
	},
	"jest": {
		"testEnvironment": "node",
		"coverageDirectory": "../coverage"
	}
}
